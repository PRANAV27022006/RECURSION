//**Sort a Stack**//
#include <bits/stdc++.h>
using namespace std;

void insertAtBottom(stack<int>& st, int val) {
   
    if (st.empty()|| st.top()<=val) {
        st.push(val);
        return;
    }

   
    int topVal = st.top();
    st.pop();


    insertAtBottom(st, val);

   
    st.push(topVal);
}


void reverseStack(stack<int>& st) {
   
    if (st.size()==1) return;

    int topVal = st.top();
    st.pop();

 
    reverseStack(st);

   
    insertAtBottom(st, topVal);
}

int main() {
    stack<int> st;
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    cout << "Enter stack elements: "<< endl;
    for (int i = 0; i < n; i++) {
        int x;
        cin >> x;
        st.push(x);
    }

    reverseStack(st);

    cout << "Reversed stack (top to bottom): ";
    while (!st.empty()) {
        cout << st.top() << " ";
        st.pop();
    }
    cout << endl;

    return 0;
}
