// **sort an array using recursion**//
#include<bits/stdc++.h>
using namespace std;
 void insert(vector<int>&ans , int temp){
     if(ans.size()==0 ||  ans.back()<=temp){
         ans.push_back(temp);
         return;
     }
     int val = ans.back();
     ans.pop_back();
     insert (ans,temp);
     ans.push_back(val);
     return;
 }
 void sort (vector<int>& ans){
     if(ans.size()==1) return ;
     int temp = ans.back();
     ans.pop_back();
     sort(ans);
     insert(ans,temp);
 }

 int  main(){
     cout<< "input element:" <<endl;
     int n;
     cin >> n;
      vector<int> ans(n);
      cout << "input an array element:" << endl;
     for(int i=0;i<n;i++){
         cin >> ans[i];
     }
     sort(ans);
     for(auto &i: ans){
         cout<< i << " ";
     }
     
 }
